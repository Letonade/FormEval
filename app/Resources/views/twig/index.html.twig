{% extends 'base.html.twig' %}

{% block body %}
<p><a href="{{ url('homepage') }}">Accueil</a></p>
<p><a href="{{ url('hello',{'name' : 'Romain'}) }}">Hello</a></p>
Nous sommes le {{ now | date('Y-m-d') }}

<p>Il y a {{ list | length }} éléments</p>

{% for value in list %}
    {{ value | capitalize | reverse }}
{% endfor %}

{% set meteo = 'soleil' %}

{%  if meteo == 'soleil' %}
    <p>Ensoleillé</p>
    {% elseif meteo =='neige' %}
        <p>Neige</p>
    {% else %}
        <p>Nuageux</p>
{% endif %}

{% endblock %}